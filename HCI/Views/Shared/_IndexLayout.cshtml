@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NCSU Group Finder</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    @RenderSection("css", false)
    <style>
        /* Set width on the form input elements since they're 100% wide by default */
    input,
    select,
    textarea {
        max-width: 280px;
    }

    .category-header{
        background: rgb(196,0,0);
        font-size:120%;
        font-weight:bold;
    }
    .navbar-header>a, .nav>li>a
    {
        color: rgb(255,255,255);  
    }
    .nav>li>a:hover
    {
        background-color: #303030;
    }

    .index-container {
  padding-right: 0px;
  padding-left: 0px;
  margin-right: auto;
  margin-left: auto;
}
   body{
       padding-bottom:0px;
   }
    .img-icon{
        background: url("@Url.Content("~/Content/img/index-icon.png")") no-repeat top left;
        background-size: 50px 50px;
        background-repeat: no-repeat;
        height:40px;
        text-indent:30px;
    }
</style>
</head>
<body>
    <div class="category-header navbar navbar-fixed-top">
        <div class=" container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                    @if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("NCSU Group Finder", "Dashboard", "User", new { area = "" }, new { @class = "img-icon navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("NCSU Group Finder", "Index", "Home", new { area = "" }, new { @class = "img-icon navbar-brand" })
                    }
            </div>
            <div class="navbar-collapse collapse">                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="index-container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
