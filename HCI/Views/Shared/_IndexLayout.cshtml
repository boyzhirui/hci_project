<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NCSU Group Finder</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    @RenderSection("css", false)
    <style>
        /* Set width on the form input elements since they're 100% wide by default */
    input,
    select,
    textarea {
        max-width: 280px;
    }

    .category-header{
        background: rgb(196,0,0);
        font-size:120%;
        font-weight:bold;
    }
    .navbar-header>a, .nav>li>a
    {
        color: rgb(255,255,255);  
    }
    .nav>li>a:hover
    {
        background-color: #303030;
    }

    .index-container {
  padding-right: 0px;
  padding-left: 0px;
  margin-right: auto;
  margin-left: auto;
}
   body{
       padding-bottom:0px;
   }
    </style>
</head>
<body>
    <div class="category-header navbar navbar-fixed-top">
        <div class=" container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NCSU Study Group", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "User")</li>
                    <li>@Html.ActionLink("Search/Join Group", "About", "Home")</li>
                    <li>@Html.ActionLink("Create Group", "Contact", "Home")</li>
                    <li>@Html.ActionLink("My Groups", "GetGroups", "User")</li>
                    <li>@Html.ActionLink("My Schedule", "GetSchedules", "User")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="index-container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
